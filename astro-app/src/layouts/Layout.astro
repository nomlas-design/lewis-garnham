---
export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Lewis Garnham - Stand-up Comedian, Actor & Podcast Host. Captivating audiences worldwide with distinctive storytelling, social commentary, and introspective observations.',
} = Astro.props;
import '../styles/main.scss';
import Loading from '../components/Loading';

const canonicalURL = new URL(Astro.url.pathname, 'https://lewisgarnham.com');
const ogImageURL = new URL('/og-image.png', 'https://lewisgarnham.com');
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name='title' content={title} />
    <meta name='description' content={description} />
    <meta name='author' content='Lewis Garnham' />
    <link rel='canonical' href={canonicalURL} />

    <!-- Favicon -->
    <link rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png' />
    <link rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png' />
    <link rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png' />
    <link rel='manifest' href='/site.webmanifest' />

    <!-- Open Graph / Facebook -->
    <meta property='og:type' content='website' />
    <meta property='og:url' content={canonicalURL} />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:image' content={ogImageURL} />
    <meta property='og:site_name' content='Lewis Garnham' />

    <!-- Twitter -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:url' content={canonicalURL} />
    <meta name='twitter:title' content={title} />
    <meta name='twitter:description' content={description} />
    <meta name='twitter:image' content={ogImageURL} />

    <!-- Additional SEO -->
    <meta name='robots' content='index, follow' />
    <meta name='googlebot' content='index, follow' />
  </head>
  <body>
    <Loading client:load />

    <slot />
    <script src='../scripts/scroll.js'></script>
  </body>
</html>
