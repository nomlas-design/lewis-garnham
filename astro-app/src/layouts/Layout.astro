---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import '../styles/main.scss';
import Loading from '../components/Loading';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Lewis Garnham - Comedian, Performer, Podcaster'
    />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
  </head>
  <body>
    <!-- <Loading client:load /> -->
    <svg
      class='organic-filters'
      style='position: absolute; width: 0; height: 0; overflow: hidden;'
    >
      <defs>
        <filter id='wobbly-stroke' x='-20%' y='-20%' width='140%' height='140%'>
          <feTurbulence
            baseFrequency='0.02'
            numOctaves='1'
            seed='2'
            result='turbulence'></feTurbulence>

          <feGaussianBlur in='turbulence' stdDeviation='5z' result='blur'
          ></feGaussianBlur>

          <feDisplacementMap in='SourceGraphic' in2='blur' scale='8'
          ></feDisplacementMap>
        </filter>

        <filter id='wobbly-fill' x='-20%' y='-20%' width='140%' height='140%'>
          <feTurbulence
            baseFrequency='0.03'
            numOctaves='1'
            seed='1'
            result='turbulence'></feTurbulence>
          <feGaussianBlur in='turbulence' stdDeviation='5' result='blur'
          ></feGaussianBlur>
          <feDisplacementMap in='SourceGraphic' in2='blur' scale='10'
          ></feDisplacementMap>
        </filter>
      </defs>
    </svg>
    <slot />
    <script src='../scripts/scroll.js'></script>
  </body>
</html>
